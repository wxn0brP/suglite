{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "SugliteConfig",
    "type": "object",
    "properties": {
        "cmd": {
            "type": "string"
        },
        "args": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "watch": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "ignore": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "restart_cmd": {
            "type": "string"
        },
        "events": {
            "type": "object",
            "additionalProperties": {
                "type": "string"
            }
        },
        "history": {
            "type": "integer",
            "minimum": 0
        },
        "delay": {
            "type": "number",
            "minimum": 0
        },
        "trustedShells": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    },
    "additionalProperties": false
}